<style>
    .card {
        width: 100px;
        height: auto;
        margin: 10px;
    }

    .card-body p {
        font-size: 10px;
        font-weight: 500;
        text-align: center;
    }

    .card-body {
        padding: 0;
    }

    .box {
        display: flex;
    }
</style>

<h5>Danh sách tài liệu</h5>
<div class="box">
    {{#each data }}
    {{#each docList }}
        <div class="card" style="width: 7rem;">
            {{!-- <a href="/document/{{this.File}}"> <img src="/img/Folder.png" class="card-img-top" alt="..."> </a> --}}
            <div class="card-body">
                <a class="card-title">{{this.Name}}</a>
            </div>
        </div>
    {{/each}}
    {{/each}}
</div>


<h5>Danh sách Folder</h5>
<div class="box">
{{#each folderChild }}
        <div class="card" style="width: 7rem;">
            {{!-- <a href="#"> <img src="/img/Folder_Icon.svg.png" class="card-img-top" alt="..."> </a> --}}
            <div class="card-body">
                <p class="card-title">{{this.Name}}</p>
            </div>
        </div>
{{/each}}
</div>
